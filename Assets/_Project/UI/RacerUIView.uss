#welcome_image{
    width: 100%;
    height: 40%;
    background-size: contain;
    background-image: var(--alien-graphic)
}

#result_win_image{
    width: 50%;
    height: 20%;
    background-size: contain;
    margin: 50px;
    background-image: var(--win-graphic)
}

#result_lose_image{
    width: 50%;
    height: 20%;
    background-size: contain;
    margin: 50px;
    background-image: var(--lose-graphic)
}

#opponent_left_image{
    width: 50%;
    height: 20%;
    background-size: contain;
    margin: 50px;
    background-image: var(--opponent-left-graphic)
}

.button{
    background-color: var(--color-02);
    border-color: var(--color-01);
    border-width: 4px;
    border-radius: 10px;
    padding-top: 50px;
    padding-bottom: 50px;
    padding-left: 100px;
    padding-right: 100px;
}
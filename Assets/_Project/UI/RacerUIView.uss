#game_view_group{
    position: absolute;
    width: 100%;
    height: 100%;
    align-items : center;
    padding: 10%;
}

.popup{
    /* background-color: var(--color-03); */
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
    width: 100%;
    height: 100%;
    align-items : center;
    justify-content: center;
    /* padding: 5%; */
}

.hide{
    display: none;
}

.turn-indicator{
    /* width: 10%;*/
    display: none;

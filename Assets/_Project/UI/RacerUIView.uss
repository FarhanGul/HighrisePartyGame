.title_text{
    color : #07A5C7;
    font-size: 600%;
    margin-bottom: 15px;
    margin-top: 15px;
    -unity-font-definition: var(--heading-font);
}

.subtitle_text{
    font-size: 480%;
    white-space: normal;
    -unity-text-align: middle-center;
    -unity-font-definition: var(--heading-font);
}

.normal_text{
    font-size: 320%;
    white-space: normal;
    -unity-text-align: middle-center;
    margin: 25px;
    -unity-font-definition: var(--normal-font);
}

.username_text{
    /* -unity-text-align: middle-center; */
    font-size: 400%;
    -unity-font-definition: var(--heading-font);
    /* white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */
    /* width: 35%; */
}

.button_text{
    color: white;
    font-size: 480%;
    -unity-font-definition: var(--heading-font);
}

